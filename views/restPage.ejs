<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= restUser.name %> 's Homepage</title>
    <link rel="stylesheet" href="/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        li{
            background-color: aqua;
        }
        h1{
            flex-direction: column;
            align-content: stretch;
            background-color: aqua;
            text-align: center;
        }
       
    </style>
    <script src="/index.js"></script>
</head>
<body>
    <h1><%= restUser.name %> 's Homepage</h1>
   <!-- <h1>Restraunt Page</h1> -->
   <% if(!isUser){ %>
   <a href="/restUser/<%= restUser._id %>/add"><button>Add Items</button></a> 
   <% } %>
   <h1>Menu Items</h1>
   <% items.forEach(function(item){ %>
    <div class="card">
     <ul>
         <li class="name"><%= item.name %></li>
         <li class="price">$<%= item.price %></li>
         <li class="time"><%= item.prepTime %> minutes</li>
        <% if(!isUser){ %>
         <form action="/restUser/<%= restUser.id %>/<%= item.id %>/delete" method="post">
            <button type="submit">Delete</button>
        </form>
    
         <form action="/restUser/<%= restUser.id %>/<%= item.id %>/edit" method="get">
            <button type="submit">Edit</button>
        </form>
    <% } else { %>
       
        <button type="submit" class="order">Add To Cart</button>
       
       <% } %>  
     </ul>
    </div>
  <% }) %>
  <% if(isUser){ %>
  <h1>Cart</h1>  
  <div class="headings">
      <ul>
          <li>ITEM<li>
          <li>PRICE</li>
          <li>QUANTITY</li>
      </ul>
  </div>
  <div class="container">
      <!-- format to store items -->
      <!-- <div class="row">
         <ul>
             <li>item name</li>
             <li>$9.99</li>
             <input type="number" name="quantity" class="quantity" min="1" max="5" value="1">
             <button class="btn">Delete</button>
         </ul>
      </div -->
      
  </div>
<div class="total">
        <h4>Total:</h4>
      <p id="amount">$0</p>
  </div>
  <form id="payment" action="" method="post">
      <button type="submit">Proceed to Payment</button>
  </form>
<% } %>
</body>