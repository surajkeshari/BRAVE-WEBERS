<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= restUser.name %> 's Homepage</title>
    <link rel="stylesheet" href="/test.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        li{
            background-color: aqua;
        }
        h1{
            flex-direction: column;
            align-content: stretch;
            background-color: aqua;
            text-align: center;
        }
       
    </style>
</head>
<body>
    <h1><%= restUser.name %> 's Homepage</h1>
   <!-- <h1>Restraunt Page</h1> -->
   <a href="/restUser/<%= restUser._id %>/add"><button>Add Items</button></a> 
   <h1>Menu Items</h1>
   <% items.forEach(function(item){ %>
    <div class="card">
     <ul>
         <li><%= item.name %></li>
         <li><%= item.price %></li>
         <li><%= item.prepTime %></li>
         <form action="/restUser/<%= restUser.id %>/<%= item.id %>/delete" method="post">
            <button type="submit">Delete</button>
        </form>
    
         <form action="/restUser/<%= restUser.id %>/<%= item.id %>/edit" method="get">
            <button type="submit">Edit</button>
        </form>
    
         
     </ul>
    </div>
  <% }) %>
</body>